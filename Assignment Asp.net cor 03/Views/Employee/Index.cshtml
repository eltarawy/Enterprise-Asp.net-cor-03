@using Assignment_Asp.net_cor_03.ViewModels;
@model IEnumerable<EmployeeViewModel>;
@{
    ViewData["Title"] = "Index";
    string VDataMessage = ViewData["Message"] as string;
    string VBagMessage = ViewBag.Massege;
}

@* <div class="alert alert-success">
   </> @ViewBag.Massege
</div> *@
<h1>All Employee</h1>
<br />
<br />
<a asp-controller="Employee" asp-action="Edit" class="btn btn-primary">Edit</a>
<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create new Employee</a>
<br />
<div class="row justify-content-center align-content-center">
    <form class="row col-8 offset-1">
        <div class="col-8">
             <input type="text" class="form-control" name="SearchValue" placeholder="Search By Name"/>
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success"/>
        </div>
    </form>
</div>
<br />
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d=>d.Name)</th>
                <th>@Html.DisplayNameFor(d=>d.Age)</th>
                <th>@Html.DisplayNameFor(d=>d.salary)</th>
                <th>@Html.DisplayNameFor(d=>d.Image)</th>
                <th>@Html.DisplayNameFor(d=>d.Department)</th>
                <th>@Html.DisplayNameFor(d=>d.Address)</th>
                <th>@Html.DisplayNameFor(d=>d.Email)</th>
                <th>@Html.DisplayNameFor(d=>d.HireDatr)</th>
                <th>@Html.DisplayNameFor(d=>d.IsActive)</th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@Html.DisplayFor(E => employee.salary)</td>
                    <td>
                        <img src="~/files/images/@employee.ImageName"class="img-fluid rounded" alt="Employee Image" height="30" width="30">
                    </td>
                    <td>@Html.DisplayFor(E => employee.Department.Name)</td>
                    <td>@employee.Address</td>
                    <td>@Html.DisplayFor(E => employee.Email)</td>
                    <td>@employee.HireDatr</td>                 
                    <td>
                        @if(employee.IsActive == true)
                        {
                            <i class="fa-solid fa-circle" style="color:green"></i>
                        }
                        else
                        {
                            <i class="fa-solid fa-cirele" style="color:Red"></i>
                        }
                    </td>
                    <partial name="_ButtonPartialView" model="employee.Id"/>                
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3> there is no Employee</h3>
    </div>
}

